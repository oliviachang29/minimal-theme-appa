{% for block in section.blocks %}
    {% if page.handle == block.settings.page_handle %}
      {% case block.type %}
          {% when 'gallery' %}
            {% include 'gallery' %}
          {% when 'slideshow' %}
            {% include 'slider' %}
          {% when 'image-with-text' %}
            {% include 'image-with-text' %}
          {% when 'custom-html' %}
            <div class="page-width">
              {{ block.settings.custom_html }}
            </div>
          {% when 'richtext' %}
            {{ block.settings.richtext }}
          {% when 'heading-1' %}
            <h1>{{ block.settings.heading }}</h1>
          {% when 'heading-2' %}
            <h2>{{ block.settings.heading }}</h2>
          {% when 'heading-3' %}
            <h3>{{ block.settings.heading }}</h3>
      {% endcase %}
    {% endif %}
{% endfor %}
